{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultBase": "main",
    "plugins": [
        {
            "plugin": "@nx/eslint/plugin",
            "options": {
                "targetName": "lint"
            }
        },
        {
            "plugin": "@nx/jest/plugin",
            "options": {
                "targetName": "test"
            }
        }
    ],
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "cache": true,
            "inputs": [
                "{projectRoot}/src/**/*.ts",
                "{projectRoot}/tsconfig.app.json",
                "{projectRoot}/webpack.config.js"
            ]
        }
    }
}
